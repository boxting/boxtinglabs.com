---
import '@/styles/globals.css';

interface Props {
  title?: string;
  description?: string;
  lang?: string;
}

const {
  title = 'Boxting Labs | Premium Software Engineering Partner',
  description = 'Boxting Labs is the premium engineering partner for visionary companies. We translate complex requirements into elegant, scalable software.',
  lang = 'en',
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const ogImageURL = new URL('/og-image.jpg', Astro.site);

// Alternate language URLs for i18n
const alternateURL =
  lang === 'en'
    ? new URL('/es' + Astro.url.pathname, Astro.site)
    : new URL(Astro.url.pathname.replace('/es', ''), Astro.site);

const englishKeywords =
  'software development, custom software, cloud native, AI integration, software engineering, LATAM software, Peru developers, US software company, enterprise software, mobile apps, web applications';
const spanishKeywords =
  'desarrollo de software, software a medida, arquitectura cloud native, integración de IA, ingeniería de software, software LATAM, desarrolladores Perú, empresa de software EEUU, aplicaciones móviles, aplicaciones web, soluciones empresariales';
---

<!doctype html>
<html lang={lang} class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="author" content="Boxting Labs" />
    <meta name="keywords" content={lang === 'en' ? englishKeywords : spanishKeywords} />
    <link rel="canonical" href={canonicalURL} />

    <!-- Language & Regional -->
    <link rel="alternate" hreflang={lang === 'en' ? 'en-US' : 'es-PE'} href={canonicalURL} />
    <link rel="alternate" hreflang={lang === 'en' ? 'es-PE' : 'en-US'} href={alternateURL} />
    <link rel="alternate" hreflang="x-default" href={new URL('/', Astro.site)} />
    <meta name="geo.region" content={lang === 'en' ? 'US' : 'PE-LIM'} />
    <meta name="geo.placename" content={lang === 'en' ? 'United States' : 'Lima, Peru'} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImageURL} />
    <meta property="og:image:alt" content="Boxting Labs Logo" />
    <meta property="og:image:type" content="image/jpeg" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:locale" content={lang === 'en' ? 'en_US' : 'es_PE'} />
    <meta property="og:site_name" content="Boxting Labs" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageURL} />
    <meta name="twitter:image:alt" content="Boxting Labs Logo" />
    <meta name="twitter:site" content="@boxtinglabs" />
    <meta name="twitter:creator" content="@boxtinglabs" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100..1000;1,9..40,100..1000&display=swap"
      rel="stylesheet"
    />

    <!-- Theme Script -->
    <script is:inline>
      (function () {
        const theme = localStorage.getItem('theme');
        const isDark =
          theme === 'dark' || (!theme && window.matchMedia('(prefers-color-scheme: dark)').matches);
        if (isDark) {
          document.documentElement.classList.add('dark');
        } else {
          document.documentElement.classList.remove('dark');
        }
      })();
    </script>
    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json" is:inline>
      {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "Boxting Labs",
        "description": "Premium software engineering partner for visionary companies",
        "url": "https://www.boxtinglabs.com",
        "logo": "https://www.boxtinglabs.com/og-image.jpg",
        "sameAs": ["https://twitter.com/boxtinglabs", "https://linkedin.com/company/boxtinglabs"],
        "address": [
          {
            "@type": "PostalAddress",
            "addressLocality": "Lima",
            "addressCountry": "PE"
          },
          {
            "@type": "PostalAddress",
            "addressCountry": "US"
          }
        ],
        "areaServed": [
          {
            "@type": "Country",
            "name": "Peru"
          },
          {
            "@type": "Country",
            "name": "United States"
          },
          {
            "@type": "Place",
            "name": "Latin America"
          }
        ],
        "knowsAbout": [
          "Software Development",
          "Cloud Native Architecture",
          "Artificial Intelligence Integration",
          "Mobile Application Development",
          "Web Application Development",
          "Enterprise Software Solutions",
          "Custom Software Engineering"
        ],
        "makesOffer": [
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "Cloud Native Development",
              "description": "Scalable and resilient applications on leading cloud platforms"
            }
          },
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "AI Integration",
              "description": "Intelligent features powered by the latest in machine learning"
            }
          },
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "Rapid Deployment",
              "description": "Ideas to production in weeks, not months, without sacrificing quality"
            }
          }
        ]
      }
    </script>
  </head>
  <body class="min-h-screen bg-background-light font-sans antialiased dark:bg-background-dark">
    <slot />
  </body>
</html>
